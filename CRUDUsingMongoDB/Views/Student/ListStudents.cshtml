@model IEnumerable<CRUDUsingMongoDB.Controllers.Student>

@{
    ViewData["Title"] = "ListStudents";
}

<h1>ListStudents</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditStudent", new {  guid = item.Id  }) |
                @Html.ActionLink("Details", "DetailsStudent", new { guid = item.Id }) |
                @Html.ActionLink("Delete", "DeleteStudent", new { guid = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
